.div.m-4
  .page.header
    %p{:style => "color: green"}= notice
    %h1.mb-4
      = t('application.list_of', model: t('activerecord.modules.pokemon_trainer.other'))
      .float-right
        = link_to t('application.new', model: t('activerecord.modules.pokemon_trainer.one')), new_pokemon_trainer_path, class: "btn btn-primary"
  %table.table.table-striped
    %thread
      %tr
      %th= t('attributes.pokemon_trainer.first_name')
      %th= t('attributes.pokemon_trainer.last_name')
      %th= t('attributes.pokemon_trainer.region')
      %th= t('attributes.pokemon_trainer.id_number')
      %th= t('attributes.pokemon_trainer.level')
      %th
      %th
      %th
    %tbody
      - @pokemon_trainers.each do |pokemon_trainer|
        %tr
          %td= pokemon_trainer.first_name
          %td= pokemon_trainer.last_name
          %td= pokemon_trainer.region
          %td= pokemon_trainer.id_number
          %td= t("attributes.pokemon_trainer.levels.#{pokemon_trainer.level}") 
          %td= link_to t('application.show', model: t('activerecord.modules.pokemon_trainer.one')), pokemon_trainer, class: "btn btn-info"
          %td= link_to t('application.edit', model: t('activerecord.modules.pokemon_trainer.one')), edit_pokemon_trainer_path(pokemon_trainer), class: "btn btn-success"
          %td= link_to t('application.destroy', model: t('activerecord.modules.pokemon_trainer.one')), pokemon_trainer, method: :delete, class: "btn btn-danger",
                                  data: {confirm: "Desea eliminarlo",
                                  accept: "OK",
                                  reject: "Cancelar"}

