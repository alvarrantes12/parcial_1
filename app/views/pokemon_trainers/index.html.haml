.div.m-4
  .page.header
    %p{:style => "color: green"}= notice
    %h1.mb-4
      = "Lista de entrenadores"
      .float-right
        = link_to "Nuevo entrenado", new_pokemon_trainer_path, class: "btn btn-primary"
  %table.table.table-striped
    %thread
      %tr
        %th= "Nombre"
        %th= "Apellido"
        %th= "Region"
        %th= "Identificaci√≥n"
        %th= "Nivel"
        %th
        %th
        %th
    %tbody
      - @pokemon_trainers.each do |pokemon_trainer|
        %tr
          %td= pokemon_trainer.first_name
          %td= pokemon_trainer.last_name
          %td= pokemon_trainer.region
          %td= pokemon_trainer.id_number
          %td= pokemon_trainer.level
          %td= ""
          %td= link_to "Ver", pokemon_trainer, class: "btn btn-info"
          %td= link_to "Editar", edit_pokemon_trainer_path(pokemon_trainer), class: "btn btn-success"
          %td= link_to "Eliminar", pokemon_trainer, method: :delete, class: "btn btn-danger",
                                  data: {confirm: "Desea eliminarlo",
                                  accept: "OK",
                                  reject: "Cancelar"}

