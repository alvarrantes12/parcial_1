.page-header
  %p{style: "color: green"}= notice

  %h1.mb-4.m-4
    = "Lista de pokemones capturados"
    .float-right
      = link_to "Nuevo", new_captured_pokemon_path, class: "btn btn-primary"

%table.table.table-striped
  %thead
    %tr
      %th= "Locación"
      %th= "Entrenador pokemon"
      %th= "Identificación entrenador"
      %th= "Pokemon"
      %th
      %th
      %th
  %tbody
    - @captured_pokemons.each do |captured_pokemon|
      %tr
        %td= captured_pokemon.location
        %td= "#{captured_pokemon.pokemon_trainer.first_name}  #{captured_pokemon.pokemon_trainer.last_name}"
        %td= captured_pokemon.pokemon_trainer.id_number
        %td= captured_pokemon.pokemon.name
        %td= link_to  "mostrar", captured_pokemon, class: "btn btn-info"
        %td= link_to "editar", edit_captured_pokemon_path(captured_pokemon), class: "btn btn-success"
        %td= link_to "eliminar", captured_pokemon, method: :delete , class: "btn btn-danger",
          data: {confirm: "desea eliminarlo",
          accept: "aceptar",
          reject: "Cancelar"}
