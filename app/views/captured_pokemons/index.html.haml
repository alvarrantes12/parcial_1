.div.m-4
  .page.header
    %p{:style => "color: green"}= notice
    %h1.mb-4
      = "Lista de Pokemones Capturados"
      .float-right
        = link_to "Nuevo pokemon capturado", new_captured_pokemon_path, class: "btn btn-primary"
  %table.table.table-striped
    %thread
      %tr
        %th= "Ubicaci√≥n"
        %th= "Entrenador Pokemon"
        %th= "Pokemon"
        %th
    %tbody
      - @captured_pokemons.each do |captured_pokemons|
        %tr
          %td= captured_pokemons.location
          %td= "#{captured_pokemons.pokemon_trainer.first_name} #{captured_pokemons.pokemon_trainer.last_name} #{captured_pokemons.pokemon_trainer.region} #{captured_pokemons.pokemon_trainer.id_number} "
          %td= "#{captured_pokemons.pokemon.name}"
          %td= link_to "Ver", captured_pokemons, class: "btn btn-info"
          %td= link_to "Editar", edit_captured_pokemon_path(captured_pokemons), class: "btn btn-success"
          %td= link_to "Eliminar", captured_pokemons, method: :delete, class: "btn btn-danger",
                                  data: {confirm: "Desea eliminarlo",
                                  accept: "OK",
                                  reject: "Cancelar"}
