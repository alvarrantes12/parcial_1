.div.m-4
  .page.header
    %p{:style => "color: green"}= notice
    %h1.mb-4
      = t('application.list_of', model: t('activerecord.modules.captured_pokemon.other'))
      .float-right.ml-4
        = link_to t('application.new_of', model: t('activerecord.modules.captured_pokemon.one')), new_captured_pokemon_path, class: "btn btn-primary"
      .float-right.ml-8
        = link_to t('application.back_to', model: t('activerecord.modules.crud.one')), root_path, class: "btn btn-secundary"
  
  %table.table.table-striped
    %thread
      %tr
        %th= t('activerecord.attributes.captured_pokemon.location')
        %th= t('activerecord.modules.pokemon_trainer.one')
        %th= t('activerecord.modules.pokemon.one')
        %th
        %th
        %th
    %tbody
      - @captured_pokemons.each do |captured_pokemon|
        %tr
          %td= captured_pokemon.location 
          %td= "#{captured_pokemon.pokemon_trainer.first_name} #{captured_pokemon.pokemon_trainer.last_name}"
          %td= "#{captured_pokemon.pokemon.name}"
          %td= link_to t('application.show'), captured_pokemon, class: "btn btn-info"
          %td= link_to t('application.edit'), edit_captured_pokemon_path(captured_pokemon), class: "btn btn-success"
          %td= link_to t('application.delete'), captured_pokemon, method: :delete, class: "btn btn-danger",
                                  data: {confirm: t('application.delete_confirmation', model: t('activerecord.modules.captured_pokemon.one')),
                                  accept: t('application.accept'),
                                  reject: t('application.reject')}


