.page-header
  %p{:style => "color: green"}= notice
  %h1.mb-4
    = t('application.list_of', model: t('activerecord.modules.captured_pokemons.other'))
  .float-right
    = link_to t('application.new', model: t('activerecord.modules.captured_pokemons.one')), new_captured_pokemon_path, class: "btn btn-primary"

%table.table.table-striped
  %thread
    %tr
      %th= t('activerecord.attributes.captured_pokemon.location')
      %th= t("activerecord.modules.pokemon_trainers.one")
      %th= t("activerecord.modules.pokemons.one")

  %tbody
    - @captured_pokemons.each do |captured_pokemon|
      %tr
        %td= captured_pokemon.location
        %td= "#{captured_pokemon.pokemon_trainer.first_name} #{captured_pokemon.pokemon_trainer.last_name} - #{captured_pokemon.pokemon_trainer.id_number}"
        %td= captured_pokemon.pokemon.name
        %td= link_to t('application.show'), captured_pokemon, class: "btn btn-info"
        %td= link_to t('application.edit'),  edit_captured_pokemon_path(captured_pokemon), class: "btn btn-success"
        %td= link_to t('application.delete'), captured_pokemon, method: :delete, class: "btn btn-danger",
                                  data: {confirm: t('application.want_to_delete', model: t('activerecord.modules.captured_pokemons.one')),
                                  accept: t('application.accept'),
                                  reject: t('application.reject')}