.div.m-4
  .page.header
    %p{:style => "color: green"}= notice
    %h1.mb-4
      = "Lista de pokemons"
      .float-right
        = link_to "Nuevo pokemon", new_captured_pokemon_path, class: "btn btn-primary"
  %table.table.table-striped
    %thread
      %tr
        %th= "Nombre"
        %th
        %th
        %th
    %tbody
      - @captured_pokemon.each do |captured_pokemon|
        %tr
          %td= captured_pokemon.name
          %td= link_to "Ver", captured_pokemon, class: "btn btn-info"
          %td= link_to "Editar", edit_captured_pokemons_path(pokemon_trainer), class: "btn btn-success"
          %td= link_to "Eliminar", captured_pokemon, method: :delete, class: "btn btn-danger",
                                  data: {confirm: "Desea eliminarlo",
                                  accept: "OK",
                                  reject: "Cancelar"}

