%p#notice= notice
.div.m-4
  .card
    .card-body
      %h5.card-title
        = t("activerecord.attributes.captured_pokemon.location")
      %p.card-text &nbsp #{@captured_pokemon.location}
      %h5.card-title
        = t("activerecord.modules.pokemon_trainer.one")
      %p.card-text &nbsp #{@captured_pokemon.pokemon_trainer.first_name} #{@captured_pokemon.pokemon_trainer.last_name}
      %h5.card-title
        = t("activerecord.modules.pokemon.one")
      %p.card-text &nbsp #{@captured_pokemon.pokemon.name} 

  .row.mt-3
    .offset-3.col-3
      = link_to t("application.back"), captured_pokemons_path, class: "btn btn-secondary btn-block"
